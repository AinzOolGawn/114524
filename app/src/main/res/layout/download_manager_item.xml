<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/download_manager_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/download_manager_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/primaryText" />

    <TextView
        android:id="@+id/download_manager_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textColor="@color/primaryText" />

    <Button
        android:id="@+id/download_manager_item_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tertiaryBackground"
        android:text="Cancel"
        android:textColor="@color/primaryText" />
</LinearLayout>